{
  "name": "minna-senshuken-backend",
  "version": "1.0.0",
  "description": "みんなの選手権 Backend API",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
